<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/x50">

    <com.xuexiang.xui.widget.imageview.RadiusImageView
        android:id="@+id/riv_expert"
        android:layout_width="@dimen/x180"
        android:layout_height="@dimen/y180"
        app:riv_corner_radius="7dp"
        app:riv_is_touch_select_mode_enabled="false" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/x50"
        android:layout_weight="1"
        android:gravity="start"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_expert_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tv_expert_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/x50"
                android:textColor="@color/tx_bottom_navigation" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_expert_content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="start|center_vertical"
            android:textColor="@color/tx_bottom_navigation" />
    </LinearLayout>
</LinearLayout>
