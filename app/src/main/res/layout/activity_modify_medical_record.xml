<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ModifyMedicalRecordActivity">

    <LinearLayout
        android:id="@+id/ll_confirm"
        android:layout_width="0dp"
        android:layout_height="@dimen/y150"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.xuexiang.xui.widget.textview.supertextview.SuperButton
            android:id="@+id/bt_confirm"
            style="@style/SuperButton.Blue"
            android:layout_width="@dimen/x400"
            android:layout_height="@dimen/y110"
            android:text="确认"
            app:sGradientEndColor="#4088FE"
            app:sGradientOrientation="LEFT_RIGHT"
            app:sGradientStartColor="#6BB6FF"
            app:sGradientType="linear" />
    </LinearLayout>

    <com.ipd.xiangzui.common.view.BounceScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scrollbars="none"
        app:layout_constraintBottom_toTopOf="@+id/ll_confirm"
        android:layout_marginBottom="@dimen/y20"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_modify_medical_record">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/ll_patient_name"
                android:layout_width="0dp"
                android:layout_height="@dimen/y150"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/x50"
                android:paddingEnd="@dimen/x50"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_patient_information">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="患者姓名"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/et_patient_name"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="end|center_vertical"
                    android:hint="请输入"
                    android:textColor="@color/black" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_patient_information"
                android:layout_width="0dp"
                android:layout_height="@dimen/y100"
                android:layout_marginStart="@dimen/x50"
                android:gravity="center_vertical"
                android:text="患者信息"
                android:textColor="@color/tx_bottom_navigation"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_medical_record"
                android:layout_width="0dp"
                android:layout_height="@dimen/y100"
                android:layout_marginStart="@dimen/x50"
                android:gravity="center_vertical"
                android:text="病历信息"
                android:textColor="@color/tx_bottom_navigation"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/stv_id_card" />

            <com.xuexiang.xui.widget.textview.supertextview.SuperTextView
                android:id="@+id/stv_patient_sex"
                android:layout_width="0dp"
                android:layout_height="@dimen/y150"
                android:paddingStart="@dimen/x30"
                android:paddingEnd="@dimen/x30"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ll_patient_name"
                app:sDividerLineType="none"
                app:sLeftTextColor="@color/black"
                app:sLeftTextString="性别"
                app:sRightIconRes="@drawable/ic_right_arrow"
                app:sRightTextColor="@color/tx_bottom_navigation"
                app:sRightTextString="请选择" />

            <com.xuexiang.xui.widget.textview.supertextview.SuperTextView
                android:id="@+id/stv_patient_age"
                android:layout_width="0dp"
                android:layout_height="@dimen/y150"
                android:paddingStart="@dimen/x30"
                android:paddingEnd="@dimen/x30"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/stv_patient_sex"
                app:sDividerLineType="none"
                app:sLeftTextColor="@color/black"
                app:sLeftTextString="年龄"
                app:sRightIconRes="@drawable/ic_right_arrow"
                app:sRightTextColor="@color/tx_bottom_navigation"
                app:sRightTextString="请选择" />

            <com.xuexiang.xui.widget.textview.supertextview.SuperTextView
                android:id="@+id/stv_patient_height"
                android:layout_width="0dp"
                android:layout_height="@dimen/y150"
                android:paddingStart="@dimen/x30"
                android:paddingEnd="@dimen/x30"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/stv_patient_age"
                app:sDividerLineType="none"
                app:sLeftTextColor="@color/black"
                app:sLeftTextString="身高"
                app:sRightIconRes="@drawable/ic_right_arrow"
                app:sRightTextColor="@color/tx_bottom_navigation"
                app:sRightTextString="请选择" />

            <com.xuexiang.xui.widget.textview.supertextview.SuperTextView
                android:id="@+id/stv_patient_body_weight"
                android:layout_width="0dp"
                android:layout_height="@dimen/y150"
                android:paddingStart="@dimen/x30"
                android:paddingEnd="@dimen/x30"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/stv_patient_height"
                app:sDividerLineType="none"
                app:sLeftTextColor="@color/black"
                app:sLeftTextString="体重"
                app:sRightIconRes="@drawable/ic_right_arrow"
                app:sRightTextColor="@color/tx_bottom_navigation"
                app:sRightTextString="请选择" />

            <com.xuexiang.xui.widget.textview.supertextview.SuperTextView
                android:id="@+id/stv_anesthesia_type"
                android:layout_width="0dp"
                android:layout_height="@dimen/y150"
                android:paddingStart="@dimen/x30"
                android:paddingEnd="@dimen/x30"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/stv_patient_body_weight"
                app:sDividerLineType="none"
                app:sLeftTextColor="@color/black"
                app:sLeftTextString="拟麻醉方式"
                app:sRightIconRes="@drawable/ic_right_arrow"
                app:sRightTextColor="@color/tx_bottom_navigation"
                app:sRightTextString="请选择" />

            <com.xuexiang.xui.widget.textview.supertextview.SuperTextView
                android:id="@+id/stv_id_card"
                android:layout_width="0dp"
                android:layout_height="@dimen/y150"
                android:paddingStart="@dimen/x30"
                android:paddingEnd="@dimen/x30"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/stv_anesthesia_type"
                app:sDividerLineType="none"
                app:sLeftTextColor="@color/black"
                app:sLeftTextString="身份证"
                app:sRightIconRes="@drawable/ic_right_arrow"
                app:sRightTextColor="@color/tx_bottom_navigation"
                app:sRightTextString="未上传" />

            <com.xuexiang.xui.widget.textview.supertextview.SuperTextView
                android:id="@+id/stv_surgery_about_medical_record"
                android:layout_width="0dp"
                android:layout_height="@dimen/y150"
                android:paddingStart="@dimen/x30"
                android:paddingEnd="@dimen/x30"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_medical_record"
                app:sDividerLineType="none"
                app:sLeftTextColor="@color/black"
                app:sLeftTextString="手术相关病历"
                app:sRightIconRes="@drawable/ic_right_arrow"
                app:sRightTextColor="@color/tx_bottom_navigation"
                app:sRightTextString="未上传" />

            <com.xuexiang.xui.widget.textview.supertextview.SuperTextView
                android:id="@+id/stv_blood_routine"
                android:layout_width="0dp"
                android:layout_height="@dimen/y150"
                android:paddingStart="@dimen/x30"
                android:paddingEnd="@dimen/x30"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/stv_surgery_about_medical_record"
                app:sDividerLineType="none"
                app:sLeftTextColor="@color/black"
                app:sLeftTextString="血常规"
                app:sRightIconRes="@drawable/ic_right_arrow"
                app:sRightTextColor="@color/tx_bottom_navigation"
                app:sRightTextString="未上传" />

            <com.xuexiang.xui.widget.textview.supertextview.SuperTextView
                android:id="@+id/stv_electrocardiogram"
                android:layout_width="0dp"
                android:layout_height="@dimen/y150"
                android:paddingStart="@dimen/x30"
                android:paddingEnd="@dimen/x30"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/stv_blood_routine"
                app:sDividerLineType="none"
                app:sLeftTextColor="@color/black"
                app:sLeftTextString="心电图"
                app:sRightIconRes="@drawable/ic_right_arrow"
                app:sRightTextColor="@color/tx_bottom_navigation"
                app:sRightTextString="未上传" />

            <com.xuexiang.xui.widget.textview.supertextview.SuperTextView
                android:id="@+id/stv_coagulation"
                android:layout_width="0dp"
                android:layout_height="@dimen/y150"
                android:paddingStart="@dimen/x30"
                android:paddingEnd="@dimen/x30"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/stv_electrocardiogram"
                app:sDividerLineType="none"
                app:sLeftTextColor="@color/black"
                app:sLeftTextString="凝血功能"
                app:sRightIconRes="@drawable/ic_right_arrow"
                app:sRightTextColor="@color/tx_bottom_navigation"
                app:sRightTextString="未上传" />

            <com.xuexiang.xui.widget.textview.supertextview.SuperTextView
                android:id="@+id/stv_infectious_disease_index"
                android:layout_width="0dp"
                android:layout_height="@dimen/y150"
                android:paddingStart="@dimen/x30"
                android:paddingEnd="@dimen/x30"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/stv_coagulation"
                app:sDividerLineType="none"
                app:sLeftTextColor="@color/black"
                app:sLeftTextString="传染病指标"
                app:sRightIconRes="@drawable/ic_right_arrow"
                app:sRightTextColor="@color/tx_bottom_navigation"
                app:sRightTextString="未上传" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.ipd.xiangzui.common.view.BounceScrollView>

    <com.ipd.xiangzui.common.view.TopView
        android:id="@+id/tv_modify_medical_record"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white"
        android:gravity="bottom"
        app:is_back="true"
        app:is_customer_service="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="补充病历" />
</androidx.constraintlayout.widget.ConstraintLayout>